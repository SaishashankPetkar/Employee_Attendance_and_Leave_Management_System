@{
    ViewBag.Title = "Submit Attendance";
}

<h2>Submit Attendance</h2>

@using (Html.BeginForm("SubmitAttendance", "Employee", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.Label("Project")
        @Html.DropDownList("ProjectID", new SelectList(ViewBag.Projects, "Value", "Text"), "Select Project", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Attendance Date")
        @Html.TextBox("AttendanceDate", null, new { @class = "form-control", type = "date" })
    </div>
    <div class="form-group">
        @Html.Label("Status")
        @Html.DropDownList("Status", new SelectList(new[] { "Present", "Absent" }), "Select Status", new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Submit Attendance</button>
}
