@model IEnumerable<ALMSystem2.Models.Attendance>
@{
    ViewBag.Title = "Attendance Requests";
}

<h2>Attendance Requests</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Attendance ID</th>
            <th>Employee ID</th>
            <th>Project ID</th>
            <th>Attendance Date</th>
            <th>Status</th>
            <th>ApprovalStatus</th>
            <th>ManagerID</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.AttendanceID)</td>
            <td>@Html.DisplayFor(modelItem => item.EmployeeID)</td>
            <td>@Html.DisplayFor(modelItem => item.ProjectID)</td>
            <td>@Html.DisplayFor(modelItem => item.AttendanceDate)</td>
            <td>@Html.DisplayFor(modelItem => item.Status)</td>
            <td>@Html.DisplayFor(modelItem => item.ApprovalStatus)</td>
            <td>@Html.DisplayFor(modelItem => item.ManagerID)</td>
            <td>
                @using (Html.BeginForm("ApproveAttendanceRequest", "Admin", FormMethod.Post, new { id = item.AttendanceID }))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("id", item.AttendanceID)
                    <input type="hidden" name="id" value="" />
                    <button type="submit" class="btn btn-success">Approve</button>
                }
                @using (Html.BeginForm("RejectAttendanceRequest", "Admin", FormMethod.Post, new { id = item.AttendanceID }))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("id", item.AttendanceID)
                    <input type="hidden" name="id" value="" />
                    <button type="submit" class="btn btn-danger">Reject</button>
                }
            </td>
        </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("AdminDashboard", "Admin")" class="btn btn-primary">Back to Dashboard</a>