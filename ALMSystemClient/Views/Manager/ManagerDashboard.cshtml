@{
    Layout = null; // or set to your layout file if you have one
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manager Dashboard</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #000;
            color: #ecf0f1;
            overflow: hidden;
            margin: 0;
            padding: 0;
        }

        .navbar {
            background-color: rgba(0, 0, 0, 0.8);
            transition: background-color 0.3s ease-in-out;
        }

            .navbar:hover {
                background-color: rgba(0, 0, 0, 0.9);
            }

        .navbar-brand {
            font-size: 1.5em;
            color: #ffffff !important;
        }

        .sidebar {
            height: 100vh;
            background-color: rgba(0, 0, 0, 0.9);
            padding-top: 20px;
            position: fixed;
            top: 0;
            left: 0;
            width: 220px;
            transition: width 0.3s ease-in-out;
            overflow: hidden;
        }

            .sidebar:hover {
                width: 250px;
            }

            .sidebar a {
                color: #ffffff;
                display: block;
                padding: 15px;
                text-decoration: none;
                font-size: 1.1em;
                transition: background-color 0.3s, padding-left 0.3s;
                border-left: 4px solid transparent;
            }

                .sidebar a:hover {
                    background-color: rgba(255, 255, 255, 0.1);
                    padding-left: 20px;
                    border-left: 4px solid #16a085;
                }

            .sidebar .active {
                background-color: #16a085;
                border-left: 4px solid #1abc9c;
            }

        .content {
            margin-left: 240px;
            padding: 20px;
            color: #ecf0f1;
            position: relative;
            z-index: 2;
        }

        .card {
            margin-bottom: 20px;
            border: none;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: rgba(255, 255, 255, 0.1);
            color: #ecf0f1;
            transition: transform 0.3s ease-in-out, background-color 0.3s, box-shadow 0.3s;
        }

            .card:hover {
                transform: scale(1.05);
                background-color: rgba(255, 255, 255, 0.2);
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            }

        .btn-dashboard {
            display: block;
            width: 100%;
            padding: 1rem;
            margin: 0.5rem 0;
            border-radius: 5px;
            color: #fff;
            font-size: 1.25rem;
            text-align: center;
            text-decoration: none;
            background: #2575fc;
            border: none;
            transition: background 0.3s, transform 0.3s;
        }

            .btn-dashboard:hover {
                background: #1d64d1;
            }

            .btn-dashboard:active {
                transform: scale(0.98);
            }
    </style>
</head>
<body>
    <div class="sidebar">
        <a href="#" class="active">Dashboard</a>
        <a href="/Manager/ViewEmployees">View Employees</a>
        <a href="/Manager/ViewPendingAttendance">View Pending Attendance Requests</a>
        <a href="/Manager/ViewPendingLeave">View Pending Leave Requests</a>
    </div>

    <div class="content">
        <h2>Welcome to the Manager Dashboard</h2>
        <p>Select an option from the sidebar to manage the system.</p>

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">View Employees</h5>
                <p class="card-text">Manage employees under your supervision.</p>
                <a href="/Manager/ViewEmployees" class="btn-dashboard">View Employees</a>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Pending Attendance Requests</h5>
                <p class="card-text">Review and manage pending attendance requests.</p>
                <a href="/Manager/ViewPendingAttendance" class="btn-dashboard">View Requests</a>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Pending Leave Requests</h5>
                <p class="card-text">Review and manage pending leave requests.</p>
                <a href="/Manager/ViewPendingLeave" class="btn-dashboard">View Requests</a>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>
</body>
</html>