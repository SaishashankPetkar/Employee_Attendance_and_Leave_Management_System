@{
    ViewBag.Title = "Apply for Leave";
}

<h2>Apply for Leave</h2>

@using (Html.BeginForm("ApplyLeave", "Employee", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.Label("Leave Type")
        @Html.DropDownList("LeaveType", new SelectList(new[] { "Sick", "Casual", "Annual" }), "Select Leave Type", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Start Date")
        @Html.TextBox("StartDate", null, new { @class = "form-control", type = "date" })
    </div>
    <div class="form-group">
        @Html.Label("End Date")
        @Html.TextBox("EndDate", null, new { @class = "form-control", type = "date" })
    </div>
    <div class="form-group">
        @Html.Label("Reason")
        @Html.TextArea("Reason", null, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Submit Leave Application</button>
}
