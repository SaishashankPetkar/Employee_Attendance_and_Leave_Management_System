@{ ViewBag.Title = "Home Page"; }

<div class="container-fluid vh-100 d-flex align-items-center justify-content-center">
    <div class="row w-100">
        <!-- Left Side: Logo and Title -->
        <div class="col-md-6 d-flex align-items-center justify-content-center">
            <div class="text-center mt-5">
                <!-- Added mt-5 to move it down -->
                <h1>ATTENDANCE AND LEAVE MANAGEMENT SYSTEM</h1>
            </div>
        </div>

        <!-- Right Side: Sign-In Options -->
        <div class="col-md-6 d-flex flex-column align-items-center justify-content-center mt-5">
            <!-- Added mt-5 to move it down -->
            <a href="@Url.Action("AdminLogin", "Account")" class="btn btn-primary btn-lg mb-3 w-75">Admin Login</a>
            <a href="@Url.Action("ManagerLogin", "Account")" class="btn btn-success btn-lg mb-3 w-75">Manager Login</a>
            <a href="@Url.Action("EmployeeLogin", "Account")" class="btn btn-info btn-lg w-75">Employee Login</a>
        </div>
    </div>
</div>
