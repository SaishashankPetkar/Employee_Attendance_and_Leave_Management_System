@model ALMSystem2.Models.EmployeeCreateViewModel
@{
    ViewData["Title"] = "Create New Employee";
}

<h2>Create New Employee</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="form-group">
    @Html.LabelFor(model => model.Employee.EmployeeName, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.EditorFor(model => model.Employee.EmployeeName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Employee.EmployeeName, "", new { @class = "text-danger" })<br />
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Employee.Email, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.EditorFor(model => model.Employee.Email, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Employee.Email, "", new { @class = "text-danger" })<br />
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Employee.Phone, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.EditorFor(model => model.Employee.Phone, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Employee.Phone, "", new { @class = "text-danger" })<br />
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Employee.HireDate, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.EditorFor(model => model.Employee.HireDate, "{0:yyyy-MM-dd}", new { htmlAttributes = new { @class = "form-control" , type= "date"} })
        @Html.ValidationMessageFor(model => model.Employee.HireDate, "", new { @class = "text-danger" })<br />
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Employee.RoleID, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownListFor(model => model.Employee.RoleID,
                              new SelectList(Model.Roles, "RoleID", "RoleName"),
                              "Select Role",
                              new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Employee.RoleID, "", new { @class = "text-danger" })<br />
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Employee.ManagerID, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.EditorFor(model => model.Employee.ManagerID, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Employee.ManagerID, "", new { @class = "text-danger" })<br />
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Employee.ProjectID, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownListFor(model => model.Employee.ProjectID,
                              new SelectList(Model.Projects, "ProjectID", "ProjectName"),
                              "Select Project",
                              new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Employee.ProjectID, "", new { @class = "text-danger" })<br />
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Employee.Password, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.EditorFor(model => model.Employee.Password, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Employee.Password, "", new { @class = "text-danger" })<br />
    </div>
</div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a href="@Url.Action("EmployeeDetails", "Admin")" class="btn btn-secondary">Cancel</a>
}

<style>
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #f8f9fa;
        color: #343a40;
        margin: 0;
        padding: 0;
    }
</style>